<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: session_path do |form| %>
  <%= form.text_field :login, required: true, autofocus: true, autocomplete: "username", placeholder: I18n.t('.login'), value: params[:login] %><br>
  <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: I18n.t('.password'), maxlength: 72 %><br>
  <%= form.submit I18n.t('.sign_in') %>
<% end %>
<br>

<%= link_to I18n.t('.forgot_password'), new_password_path %>
<%= link_to I18n.t('.create_account'), new_registration_path %>
<%= link_to I18n.t('.sign_in_google'), auth_google_path %>
