<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<% content_for :title, I18n.t('sellers.index.seller_products') %>

<h1 class="mb-5"><%= I18n.t('.sellers.index.title', seller: Current.user.name) %></h1>

<%= link_to I18n.t('sellers.index.new_product'), new_seller_product_path, class:"btn btn-dark rounded-pill mb-3" %>

<div class="container" id="products">
  <div class="row row-cols-4 gap-4 row-gap-4 justify-content-start">
  <% @products.each do |product| %>
    <div class="card col">
      <%= image_tag product.images.first, class: "rounded object-fit-cover"%>
      <div class="mx-3 my-2 p-0 h-100">
        <h5 class="">
          <a href="<%= seller_product_path(product) %>" class="link-dark link-underline-opacity-0"><%= product.name %></a>
        </h5>
        <div class="d-flex justify-content-between align-items-center">
          <p class="h-100 m-0">R$ <%= product.price%></p>
          <span> <%= I18n.t('sellers..index.quantity', quantity: product.quantity) %> </span>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

