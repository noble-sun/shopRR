<div class="login">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-4">
    <h1 class="fw-bold fs-2"> <%= I18n.t('.registrations.title') %> </h1>
    <h2 class="fs-6 text-secondary"> <%= I18n.t('.registrations.subtitle') %> </h2>
  </div>

  <%= form_with model: @user, url: registrations_url, class: "d-flex flex-column" do |form| %>

    <div class="d-flex flex-column mb-3">
      <%= form.label :name, I18n.t('.registrations.labels.name'), class:"form-label" %>
      <%= form.text_field :name,
        required: true,
        autofocus: true,
        autocomplete: "name",
        placeholder: I18n.t('.registrations.placeholders.name'),
        value: params[:name],
        class: "flex-fill rounded-3 form-input border border-black"
      %>
    </div>

    <div class="d-flex flex-column mb-3">
      <%= form.label :surname, I18n.t('.registrations.labels.surname'), class:"form-label" %>
      <%= form.text_field :surname,
        required: true,
        autocomplete: "surname",
        placeholder: I18n.t('.registrations.placeholders.surname'),
        value: params[:surname],
        class: "flex-fill rounded-3 form-input border border-black"
      %>
    </div>

    <div class="d-flex gap-3">
      <div class="d-flex flex-column mb-3 flex-fill">
        <%= form.label :phone, I18n.t('.registrations.labels.phone'), class:"form-label" %>
        <%= form.text_field :phone,
          autocomplete: "phone",
          placeholder: I18n.t('.registrations.placeholders.phone'),
          value: params[:phone],
          class: "rounded-3 form-input border border-black w-100"
        %>
      </div>
      <div class="d-flex flex-column mb-3 ml-3">
        <%= form.label :date_of_birth, I18n.t('.registrations.labels.date_of_birth'), class:"form-label" %>
        <%= form.text_field :date_of_birth,
          placeholder: I18n.t('.registrations.placeholders.date_of_birth'),
          value: params[:date_of_birth],
          class: "rounded-3 form-input border border-black w-100"
        %>
      </div>
    </div>

    <div class="d-flex flex-column mb-3">
      <%= form.label :email_address, I18n.t('.registrations.labels.email_address'), class:"form-label" %>
      <%= form.email_field :email_address,
        required: true,
        autocomplete: "email",
        placeholder: I18n.t('.registrations.placeholders.email_address'),
        value: params[:email_address],
        class: "flex-fill rounded-3 form-input border border-black"
      %>
    </div>

    <div class="d-flex flex-column mb-3">
      <%= form.label :cpf, I18n.t('.registrations.labels.cpf'), class:"form-label" %>
      <%= form.text_field :cpf,
        required: true,
        placeholder: I18n.t('.registrations.placeholders.cpf'),
        value: params[:cpf],
        class: "flex-fill rounded-3 form-input border border-black"
      %>
    </div>

    <div class="d-flex flex-column mb-3">
      <%= form.label :password, I18n.t('.registrations.labels.password'), class:"form-label" %>
      <%= form.password_field :password,
        required: true,
        autocomplete: "current-password",
        placeholder: I18n.t('.registrations.placeholders.password'),
        value: params[:password],
        class: "flex-fill rounded-3 form-input border border-black"
      %>
    </div>

    <div class="d-flex flex-column mt-4">
      <%= form.submit I18n.t('.registrations.buttons.sign_up'),
        class: "btn btn-dark", style:"height:56px;"
      %>
    </div>
  <% end %>
</div>
