<div class="content-padding">
  <% content_for :title, I18n.t('.addresses.new.title') %>

  <div>
    <h1><%= I18n.t('.addresses.new.title') %></h1>

    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="<%= addresses_path %>" class="link-secondary link-underline-opacity-0">
            <%= I18n.t('.addresses.index.title') %>
          </a>
        </li>
        <li class="breadcrumb-item active text-black" aria-current="page"> <%= I18n.t('.addresses.new.title') %></li>
      </ol>
    </nav>
  </div>
  <div class="d-flex justify-content-center">
    <%= render "form", address: @address, submit_name: I18n.t('.addresses.buttons.create') %>
  </div>
</div>
