<div class="content-padding">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, I18n.t('.addresses.index.title') %>

  <h1 class="mb-4"><%= I18n.t('.addresses.index.title') %></h1>

  <div id="addresses">
    <% @addresses.each do |address| %>
      <div class="d-flex justify-content-between mb-3 ps-3 gap-4 rounded-2 border border-secondary-subtle overflow-hidden"
        style="background-color:#F9F9F9;height:100px;"
      >
        <%= link_to address_path(address), id: dom_id(address),
          class: "row row-cols-5 w-100 text-decoration-none text-reset" do
        %>
          <div class="d-flex flex-column flex-fill py-3">
            <label><%= I18n.t('.addresses.street') %></label>
            <span class="d-flex align-items-center rounded-pill px-3 border border-secondary-subtle bg-white flex-fill text-secondary"
              style="height:49px;"
            >
              <%= address.street %>
            </span>
          </div>
          <div class="d-flex flex-column flex-fill py-3">
            <label><%= I18n.t('.addresses.number') %></label>
            <span class="d-flex align-items-center rounded-pill px-3 border border-secondary-subtle bg-white text-secondary"
              style="height:49px;"
            >
              <%= address.number %>
            </span>
          </div>
          <div class="d-flex flex-column flex-fill py-3">
            <label><%= I18n.t('.addresses.neighborhood') %></label>
            <span class="d-flex align-items-center rounded-pill px-3 border border-secondary-subtle bg-white text-secondary"
              style="height:49px;"
            >
              <%= address.neighborhood %>
            </span>
          </div>
          <div class="d-flex flex-column flex-fill py-3">
            <label><%= I18n.t('.addresses.city') %></label>
            <span class="d-flex align-items-center rounded-pill px-3 border border-secondary-subtle bg-white text-secondary"
              style="height:49px;"
            >
              <%= address.city %>
            </span>
          </div>
          <div class="d-flex flex-column flex-fill py-3">
            <label><%= I18n.t('.addresses.zipcode') %></label>
            <span class="d-flex align-items-center rounded-pill px-3 border border-secondary-subtle bg-white text-secondary"
              style="height:49px;"
            >
              <%= address.zipcode %>
            </span>
          </div>
        <% end %>
        <div class="d-flex flex-column" style="width:97px;">
          <% if address.primary_address %>
          <label class="px-3 py-1 bg-secondary text-white rounded-bottom">
              <%= I18n.t('.addresses.index.primary_address') %>
          </label>
        <% end %>
          <div class="d-flex justify-content-center align-items-center flex-grow-1"
           style="<%= 'padding-top:30px;' unless address.primary_address %>"
          >
            <%= form_with url: address_path(address), method: :delete do |form| %>
              <%= form.button nil, class:"btn-delete" do %>
                <i class="bi bi-x fs-5"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to I18n.t('.addresses.buttons.new'), new_address_path,
    class:"d-flex jusfity-content-center align-items-center btn btn-dark rounded-pill px-4",
    style:"height:49px;width:fit-content;"
  %>
</div>
